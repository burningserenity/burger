<h1>Burgers!</h1>

<h2>Ready to eat</h2>

<ul>
    {{#each burgers}}
        {{#unless this.devoured}}
            <li>
                {{this.name}}

                <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devour" value="true">
                    <button type="submit">DEVOUR!</button>
                </form>
            </li>
        {{/unless}}
    {{/each}}
</ul>

<h2>Meal history</h2>

<ul>
    {{#each burgers}}
        {{#if this.devoured}}
            <li>
                {{this.name}}
            </li>
        {{/if}}
    {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-update-form" action="/" method="POST">
    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
    </div>
    
    <button type="submit">Add Burger</button>
</form>
